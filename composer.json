{
    "name": "andreia/php-sdk-dolby-api",
    "description": "PHP SDK for Dolby API",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andreia Bohner",
            "email": "andreiabohner@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "laravel/pint": "^1.4",
        "pestphp/pest": "^1.22",
        "symfony/var-dumper": "^6.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "DolbyApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DolbyApi\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],
        "test": [
            "./vendor/bin/pest"
        ]
    }
}
